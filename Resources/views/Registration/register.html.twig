{% extends 'CCDNUserUserBundle::base.html.twig' %}

{% set LayoutTemplate = ccdn_user_user.registration.register.layout_template %}

{% block title %}{{- 'title.register.register'|trans({}, 'CCDNUserUserBundle') -}}{% endblock %}

{% block tool_bar %}{# clear out the tool bar for this page #}{% endblock tool_bar %}

{% block sidebar %}
	{%- include 'CCDNUserUserBundle:Sidebar:sidebar_register.html.twig' -%}
{% endblock sidebar %}

{%- block navbar_site_primary -%}
	{%- include 'CCDNUserUserBundle::header_alt_register.html.twig' -%}
{%- endblock navbar_site_primary -%}


{% block body_content %}

	{%- spaceless -%}
	
	<div class="container-fluid">
		<div class="span5">
			{%- form_theme form ccdn_user_user.registration.register.form_theme -%}
			<form action="{{- path('fos_user_registration_register') -}}" {{ form_enctype(form) }} method="POST" class="form-vertical">
				<fieldset>

					<div class="control-group">
						<div class="controls">
							<h4>{{- 'title.register.register'|trans({}, 'CCDNUserUserBundle') -}}</h4>
						</div>
					</div>
					{{- form_errors(form) -}}

					{{- form_widget(form) -}}

					<div class="form-actions">
						<input type="submit" class="btn btn-primary" value="{{- 'registration.submit'|trans({}, 'FOSUserBundle') -}}">
					</div>

				</fieldset>
			</form>
		</div>
	
		<div class="span7">
			woop woop
		</div>
	</div>
	
	{%- endspaceless -%}

{% endblock body_content %}
