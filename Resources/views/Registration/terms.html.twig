{% extends ccdn_user_user.registration.register.layout_template %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block title %}{{- 'ccdn_user_user.title.register.activation.pending'|trans({}, 'CCDNUserUserBundle') -}}{% endblock %}

{% block sidebar %}
	{{ parent() }}

	{%- include 'CCDNUserUserBundle:Sidebar:sidebar.html.twig' -%}

{% endblock %}

{% block body_content %}

	{%- spaceless -%}

	{%- include 'CCDNComponentCommonBundle:Flashes:flashes.html.twig' -%}

	<h2>{{- 'ccdn_user_user.title.register.terms'|trans({}, 'CCDNUserUserBundle') -}}</h2>

	<div class="well">
		{%- include ccdn_user_user.legal_documents.terms_conditions -%}

	</div>

	<form action="{{- path('ccdn_user_user_registration_terms') -}}" method="POST">
		<div class="form-actions center">
			<h4><input type="checkbox" id="accept_terms" name="accept_terms" value="1" />&nbsp;&nbsp;I accept the terms and conditions.</h4><br>
			<input type="submit" class="btn" value="I Accept" />&nbsp;
			<a class="btn" href="{{- path('fos_user_security_login') -}}">I do NOT Accept</a>
		</div>
	</form>
	{%- endspaceless -%}

{% endblock body_content %}
