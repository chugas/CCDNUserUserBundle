{% extends 'CCDNUserUserBundle::base.html.twig' %}

{% set LayoutTemplate = ccdn_user_user.registration.register.layout_template  %}

{% block title %}{{- 'ccdn_user_user.title.register.activation.pending'|trans({}, 'CCDNUserUserBundle') -}}{% endblock %}

{% block tool_bar %}{# clear out the tool bar for this page #}{% endblock tool_bar %}


{% block body_content %}

	{%- spaceless -%}

	<header>
		<h3>{{- 'ccdn_user_user.title.register.terms'|trans({}, 'CCDNUserUserBundle') -}}</h3>
	</header>

	<section>
		<div class="well">
			{%- include ccdn_user_user.legal_documents.terms_conditions -%}
		</div>
	</section>
	
	<section>
		<form action="{{- path('ccdn_user_user_registration_terms') -}}" method="POST">
			<div class="form-actions center">
			
				<h4>
					<input type="checkbox" id="accept_terms" name="accept_terms" value="1" />
					&nbsp;&nbsp;I accept the terms and conditions.
				</h4>
				
				<br>
			
				<input type="submit" class="btn" value="I Accept" />
			
				<a class="btn" href="{{- path('fos_user_security_login') -}}">
					I do NOT Accept
				</a>
			</div>
		</form>
	</section>
	
	{%- endspaceless -%}

{% endblock body_content %}
