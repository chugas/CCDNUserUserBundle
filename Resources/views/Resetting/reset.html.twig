{% extends ccdn_user_user.resetting.reset.layout_template %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block title %}{{- 'ccdn_user_user.title.reset.new_password'|trans({}, 'CCDNUserUserBundle') -}}{% endblock %}

{% block sidebar %}
	{{ parent() }}

	{%- include 'CCDNUserUserBundle:Sidebar:sidebar.html.twig' -%}

{% endblock %}

{% block body_content %}

	{%- spaceless -%}

	{%- include 'CCDNComponentCommonBundle:Flashes:flashes.html.twig' -%}

	<h2>{{- 'ccdn_user_user.title.reset.new_password'|trans({}, 'CCDNUserUserBundle') -}}</h2>

	{%- form_theme form ccdn_user_user.resetting.reset.form_theme -%}
	<form action="{{- path('fos_user_resetting_reset', {'token': token}) -}}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
		<fieldset>

			{{- form_errors(form) -}}

			<div class="control-group"><div class="controls row-fluid">{{- form_row(form._token) -}}</div></div>

			<div class="control-group{{- (form.new.first.vars.errors|length > 0) ? ' error': '' -}}">
				{{- form_label(form.new.first, null, { 'label': 'fos_user_change_password_form_new_first' |trans({}, 'FOSUserBundle')}) -}}
				<div class="controls row-fluid">
					{{- form_errors(form.new.first) -}}
					{{- form_widget(form.new.first) -}}
				</div>
			</div>

			<div class="control-group{{- (form.new.second.vars.errors|length > 0) ? ' error': '' -}}">
				{{- form_label(form.new.second, null, { 'label': 'fos_user_resetting_form_new_second' |trans({}, 'FOSUserBundle')}) -}}
				<div class="controls row-fluid">
					{{- form_errors(form.new.second) -}}
					{{- form_widget(form.new.second) -}}
				</div>
			</div>

			<div class="form-actions">
		        <input type="submit" class="btn btn-primary" value="{{- 'resetting.reset.submit'|trans({}, 'FOSUserBundle') -}}">
			</div>

		</fieldset>
	</form>

	{%- endspaceless -%}

{% endblock body_content %}
